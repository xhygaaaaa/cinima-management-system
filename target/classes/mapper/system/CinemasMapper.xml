<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.CinemasMapper">
    
    <resultMap type="Cinemas" id="CinemasResult">
        <result property="cinemaId"    column="cinema_id"    />
        <result property="name"    column="name"    />
        <result property="address"    column="address"    />
        <result property="contact"    column="contact"    />
        <result property="businessHours"    column="business_hours"    />
        <result property="facilities"    column="facilities"    />
    </resultMap>

    <sql id="selectCinemasVo">
        select cinema_id, name, address, contact, business_hours, facilities from cinemas
    </sql>

    <select id="selectCinemasList" parameterType="Cinemas" resultMap="CinemasResult">
        <include refid="selectCinemasVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="address != null  and address != ''"> and address = #{address}</if>
            <if test="contact != null  and contact != ''"> and contact = #{contact}</if>
            <if test="businessHours != null  and businessHours != ''"> and business_hours = #{businessHours}</if>
            <if test="facilities != null  and facilities != ''"> and facilities = #{facilities}</if>
        </where>
    </select>
    
    <select id="selectCinemasByCinemaId" parameterType="Long" resultMap="CinemasResult">
        <include refid="selectCinemasVo"/>
        where cinema_id = #{cinemaId}
    </select>

    <insert id="insertCinemas" parameterType="Cinemas" useGeneratedKeys="true" keyProperty="cinemaId">
        insert into cinemas
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="address != null and address != ''">address,</if>
            <if test="contact != null">contact,</if>
            <if test="businessHours != null">business_hours,</if>
            <if test="facilities != null">facilities,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="address != null and address != ''">#{address},</if>
            <if test="contact != null">#{contact},</if>
            <if test="businessHours != null">#{businessHours},</if>
            <if test="facilities != null">#{facilities},</if>
         </trim>
    </insert>

    <update id="updateCinemas" parameterType="Cinemas">
        update cinemas
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="address != null and address != ''">address = #{address},</if>
            <if test="contact != null">contact = #{contact},</if>
            <if test="businessHours != null">business_hours = #{businessHours},</if>
            <if test="facilities != null">facilities = #{facilities},</if>
        </trim>
        where cinema_id = #{cinemaId}
    </update>

    <delete id="deleteCinemasByCinemaId" parameterType="Long">
        delete from cinemas where cinema_id = #{cinemaId}
    </delete>

    <delete id="deleteCinemasByCinemaIds" parameterType="String">
        delete from cinemas where cinema_id in 
        <foreach item="cinemaId" collection="array" open="(" separator="," close=")">
            #{cinemaId}
        </foreach>
    </delete>
</mapper>